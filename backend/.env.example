# Twilio Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=your_twilio_phone_number_here
AGENT_PHONE_NUMBER=your_agent_phone_number_here

# Spoof Calling Configuration
SPOOF_CALLER_ID=your_spoof_caller_id_here
VOICE_WEBHOOK_URL=https://your-domain.com/voice-webhook
SMS_WEBHOOK_URL=https://your-domain.com/sms-webhook

# Server Configuration
PORT=3001
NODE_ENV=production

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password_here

# Security
JWT_SECRET=your_jwt_secret_here
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log
